	public Set<Tweet> addTweet(User user) {
		Set<Tweet> t = null;
		try {
			Query query = getSession().createQuery("from Tweet where userid="+user.getUserId());
			List<Tweet> tw = query.list();
			System.out.println(tw.size());
			
			
			
		}catch (HibernateException e) {
			rollback();
		}finally {
			close();
		}
		return t;
	}
