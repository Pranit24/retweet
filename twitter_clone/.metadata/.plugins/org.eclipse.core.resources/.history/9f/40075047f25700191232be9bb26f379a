package com.me.validator;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.validation.Errors;
import org.springframework.validation.Validator;

import com.me.dao.UserDao;
import com.me.pojo.User;

public class UserValidator implements Validator{

	@Autowired
	UserDao userDao;
	
	@Override
	public boolean supports(Class<?> clazz) {
		return User.class.isAssignableFrom(clazz);
	}

	@Override
	public void validate(Object target, Errors errors) {
		User logged_user = (User) target;
		if(logged_user.getEmail().equals("")) {
			errors.rejectValue("email","", "Enter an email address");
		}
		else if(!logged_user.getEmail().matches("^[a-zA-Z0-9]+@[a-zA-Z0-9]+(.[a-zA-Z]{2,})$")) {
			errors.rejectValue("email", "","Enter a valid email address!");
		}
		if(logged_user.getPassword().equals("")){
			System.out.println("???");
			errors.rejectValue("password", "", "Enter a password");
		}
		User user = userDao.check(user.getEmail(), user.getPassword());
		
		
	}

}
